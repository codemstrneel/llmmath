def solution(tuples_list, numeric_string):
    import re
    from collections import defaultdict
    
    frequencies = defaultdict(int)
    for char in numeric_string:
        frequencies[char] += 1

    numbers = list(map(int, re.findall(r'\d+', numeric_string)))
    max_number = max(numbers) if numbers else 0

    modified_tuples = []
    for s, lst in tuples_list:
        lst.append(max_number)
        lst.sort()
        modified_tuples.append((s, lst))
    
    modified_tuples.sort(key=lambda x: x[0])
    
    return (dict(frequencies), modified_tuples)