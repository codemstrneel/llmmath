def solution(cone_dimensions):
    import math
    results = []
    for radius, height in cone_dimensions:
        slant_height = math.sqrt(radius**2 + height**2)
        lateral_surface_area = math.pi * radius * slant_height
        base_surface_area = math.pi * radius**2
        total_surface_area = lateral_surface_area + base_surface_area
        results.append({
            'radius': radius,
            'height': height,
            'lateral_surface_area': lateral_surface_area,
            'total_surface_area': total_surface_area
        })
    return results