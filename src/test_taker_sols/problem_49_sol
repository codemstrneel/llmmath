def solution(s, k):
    char_count = {}
    modified_string = ''
    
    for char in s:
        if char.isdigit():
            modified_string += str(int(char) + k)
        else:
            modified_string += char
            if char in char_count:
                char_count[char] += 1
            else:
                char_count[char] = 1
    
    return char_count, modified_string