def solution(tuples_list):
    max_sum = float('-inf')
    result_string = ''
    
    for string, int_list in tuples_list:
        current_sum = sum(int_list)
        if current_sum > max_sum:
            max_sum = current_sum
            result_string = string
            max_int_list = int_list
            
    reversed_list = list(reversed(max_int_list))
    rounded_sum = round(sum(reversed_list))
    
    return (result_string, rounded_sum)