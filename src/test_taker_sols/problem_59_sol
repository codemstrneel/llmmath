def solution(data):
    from collections import Counter
    
    flat_data = []
    for item in data:
        if isinstance(item, tuple):
            flat_data.extend(item)
    
    result = []
    for month_data in flat_data:
        if isinstance(month_data, tuple):
            month, count = month_data
            if month in {1, 3, 5, 7, 8, 10, 12}:  # Months with 31 days
                result.extend(count)
    
    letter_counts = Counter(result)
    return tuple((char, letter_counts[char]) for char in sorted(letter_counts))