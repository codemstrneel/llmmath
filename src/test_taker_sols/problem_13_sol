def solution(data):
    max_avg = float('-inf')
    result = None
    for entry in data:
        avg = sum(entry['scores']) / len(entry['scores'])
        if avg > max_avg:
            max_avg = avg
            result = entry
    highest_score = max(result['scores'])
    transformed_scores = sorted(score * highest_score for score in result['scores'])
    return (result['name'], transformed_scores)