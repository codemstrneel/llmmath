def solution(data):
    from statistics import median

    def get_median(prices):
        return median(prices) if prices else float('inf')

    sorted_data = sorted(data, key=lambda x: get_median(x['prices']))
    lowest_median_dict = next((d for d in sorted_data if d['prices']), None)

    if lowest_median_dict:
        prices = lowest_median_dict['prices']
        product = lowest_median_dict['product']
        price_difference = max(prices) - min(prices)
        vowel_count = sum(1 for char in product if char in 'aeiouAEIOU')
        final_value = price_difference * vowel_count
        return (product, final_value)
    
    return None