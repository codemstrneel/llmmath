def solution(polygons):
    import math
    
    def to_polar(x, y):
        distance = round(math.sqrt(x**2 + y**2), 2)
        angle = round(math.atan2(y, x), 2)
        return (distance, angle)
    
    result = []
    
    for polygon in polygons:
        coordinates = polygon.split()
        distances = []
        total_distance = 0
        
        for coord in coordinates:
            x, y = map(int, coord[coord.index('(')+1:coord.index(')')].split(','))
            distance = math.sqrt(x**2 + y**2)
            distances.append(distance)
            total_distance += int(distance)
        
        if total_distance % 10 == 6:
            polar_coords = [f"{to_polar(int(coord[coord.index('(')+1:coord.index(',')]), int(coord[coord.index(',')+1:coord.index(')')]))}" for coord in coordinates]
            result.append(' '.join(polar_coords))
    
    return result